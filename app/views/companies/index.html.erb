<div class="bg-header">

</div>

<div class="row">
<% @companies.each do |company| %>
  <div class="col-lg-2">
      <%= link_to company.name, company_path(company) %>
      <% if current_user %>
        <% investment = current_user.investments.find_by(company_id: company.id) %>
        <% if investment %>
          <%= link_to 'Divest', investment_path(investment), method: :delete %>
        <% else %>
          <%= link_to 'Invest', investments_path(company_id: company.id), method: :post %>
        <% end %>
      <% end %>
  </div>
<% end %>
</div>

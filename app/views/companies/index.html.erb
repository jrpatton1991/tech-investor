<% @companies.each do |company| %>

  <ul>
    <li>
      <%= link_to company.name, company_path(company) %>

      <% if company.user_ids.include?(current_user.id) %>
        <%= link_to 'Divest', '#' %>
      <% else %>
        <%= link_to 'Invest', investments_path(company_id: company.id), method: :post %>
      <% end %>


    </li>
  </ul>
<% end %>
